<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
    <% @logs.each do |log| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <a href= "<%= log_path(log) %>"><img class="card-img-top" width="100%" height="225" src="<%= log.image.url %>" alt="<%= log.title %>"></img></a>
          <div class="card-body">
          <h5 class="card-title"><a href= "<%= log_path(log) %>"><%= log.title %></a></h5>
          <p class="card-subtitle mb-2 text-muted"><span>#</span><%= log.tag %></p>
          <a href="<%= user_path(log.user)%>"><img class="rounded-circle img-fluid mb-3" src="<%= gravatar_url(log.user, { size: 30 }) %>" alt="<%= log.user.name %>"></a>
          <div class="float-right">
          <% if current_user == log.user %>
          <%= link_to "Delete", log, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm rounded-pill' %>
          <% end %>
          </div>      
          </div>
        </div>
      </div>
    <% end %>
  
  </div>
</div>
</div>
<%= paginate logs %>
