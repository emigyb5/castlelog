<div class="container">
  <div class="py-2 text-center">
    <img class="rounded-circle img-fluid mb-3" src="<%= gravatar_url(@user, { size: 80 }) %>" alt="<%= @user.name %>">
    <h2><%= @user.name %></h2>
　</div>
　<div>
  <% if current_user == @user %>
  <div>
    <div class="text-center">
      <%= link_to 'Log castle now!', new_log_path(current_user), class: 'btn btn-lg btn-primary rounded-pill btn-block mb-3' %>
    </div>
  </div>
  <% end %>
  </div>
  <div>
    <ul class="nav nav-tabs nav-justified mt-3 mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">My logs <span class="badge badge-secondary"><%= @count_logs %></span></a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">Favorites  <span class="badge badge-secondary"><%= @count_likes %></span></a></li>
    </ul>
  </div>
  
  <%= render 'logs/logs', logs: @logs %>

</div>
